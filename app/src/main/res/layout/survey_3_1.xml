<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/10"
            android:textSize="25dp"
            android:textColor="#03A9F4"
            android:layout_alignParentLeft="true">
        </TextView>


        <Button
            android:id="@+id/exit_button_3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape_exit"
            android:text="나가기"
            android:layout_alignParentRight="true"></Button>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="한국판 지각된 스트레스 척도"
            android:textSize="25dp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:gravity="center"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">
        <TextView
            android:id="@+id/question_3_1"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="지난 한 달동안, 얼마나 자주 예상치 못한 일 때문에 화가 났습니까?"
            android:textSize="25dp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/problem_shape">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="6dp">

        <Button
            android:id="@+id/third_1_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clickbutton"
            android:text="절대 그렇지 않다"
            android:textColor="#000000"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/third_1_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clickbutton"
            android:text="거의 그렇지 않다"
            android:textColor="#000000"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/third_1_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clickbutton"
            android:text="가끔 그렇다"
            android:textColor="#000000"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/third_1_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clickbutton"
            android:text="종종 그렇다"
            android:textColor="#000000"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/third_1_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clickbutton"
            android:text="자주 그렇다"
            android:textColor="#000000"
            android:textSize="30dp">
        </Button>
        <Button
            android:id="@+id/third_1_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clickbutton"
            android:text="항상 그렇다"
            android:textColor="#000000"
            android:textSize="30dp">
        </Button>

    </LinearLayout>



</LinearLayout>