<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >



        <Button
            android:id="@+id/select_3_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape_exit"
            android:text="메인으로"
            android:layout_alignParentRight="true"></Button>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="스트레스 관련"
            android:textSize="30dp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:gravity="center"
            >
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="6dp">

        <Button
            android:id="@+id/select_3_1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/clickbutton"
            android:text="한국판 지각된 스트레스 척도(10문항)"
            android:textColor="#000000"
            android:textSize="20dp">
        </Button>
        <Button
            android:id="@+id/select_3_2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/clickbutton"
            android:text="스트레스 반응 척도(39문항)"
            android:textColor="#000000"
            android:textSize="20dp">
        </Button>
        <Button
            android:id="@+id/select_3_3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/clickbutton"
            android:text="스트레스 대처 척도(48문항)"
            android:textColor="#000000"
            android:textSize="20dp">
        </Button>
        <Button
            android:id="@+id/select_3_4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/clickbutton"
            android:text="스트레스 대처 예비 설문지(50문항)"
            android:textColor="#000000"
            android:textSize="20dp">
        </Button>


    </LinearLayout>



</LinearLayout>